<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="helloworld" translate="label" sortOrder="10">
            <label>Helloworld</label>
        </tab>
        <section id="helloworld" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Hello World</label>
            <tab>helloworld</tab>
            <resource>Smartosc_HelloWorld::helloworld_configuration</resource>
            <group id="configuration_helloworld" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Configuration</label>
                <field id="enable_helloworld" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment></comment>
                </field>
                <field id="display_text" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Display Text</label>
                    <comment>This text will display on the frontend.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
